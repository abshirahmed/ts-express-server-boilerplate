{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "es2015"
    ],
    "rootDir": "./"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests/**/*",
    "node_modules"
  ]
}
